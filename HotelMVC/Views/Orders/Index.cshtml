@model Tuple<List<Tuple<int, string>>, Dictionary<int, decimal>>

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
</head>
<body>
	<table class="table">
		<thead>
			<tr>
				<th>
					Order Id#
				</th>
				<th>
					Total
				</th>
				<th>
					Date of Purchase
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Item1)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Item1)
					</td>
					<td>
						@Html.DisplayFor(modelItem => Model.Item2[item.Item1])
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Item2)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Item1">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.Item1">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.Item1">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</body>
</html>
